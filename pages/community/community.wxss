/* pages/community/community.wxss */

.post{
  display: flex;
  flex-direction: row;
  padding: 30rpx 20rpx 0rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.avatar image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

