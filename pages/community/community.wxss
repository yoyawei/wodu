.detail{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.name{
  font-size: 30rpx;
  color: #666;
  line-height: 1.6em;
  margin-left: 10rpx;
}

.username{
  color: #268dcd;
}

.bookname{
  color: #268dcd;
}

.title{
  font-size: 32rpx;
  line-height: 1.8em;
  color: #666;
}

.content{
  width: 100%;
  font-size: 30rpx;
  color: #333;
  text-indent: 1.2em;
  line-height: 1.6em;
  letter-spacing: 1rpx; 
  word-break:break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 3; 
}

.postimg{
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
}

.actions{
  display: flex;
  flex-direction: row;
  height: 88rpx;
  font-size: 28rpx;
  color: #999;
  align-items: center;
}

.actions view{
  flex: 1;
  text-align: center;
  width: 150rpx;
}

.actions image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.addbtn{
  position: fixed;
  bottom: 20rpx;
  right: 30rpx;
  width: 88rpx;
  height: 88rpx;
}

.addbtn image{
  width: 88rpx;
  height: 88rpx;
}