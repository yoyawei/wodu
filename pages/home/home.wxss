/* pages/home/home.wxss */

.container {
  background-color: #f5f5f5;
}

swiper {
  width: 750rpx;
  height: 240rpx;
}

.slideimg {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.searsharea {
  height: 96rpx;
  background-color: #f5f5f5;
}

.searsh {
  display: flex;
  flex-direction: row;
  margin: 18rpx 20rpx 18rpx 20rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  color: #666;
  background-color: #fff;
  border-radius: 20rpx;
}

.searsh image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 20rpx;
}

.main {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  padding: 30rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.mainitem {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.mainimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* background-color: #DCE5F7;   */
  text-align: center;
  margin-bottom: 20rpx;
}

.mainitem image {
  width: 90rpx;
  height: 90rpx;
  margin-top: 5rpx;
}

.box {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 30rpx;
  margin: 20rpx 30rpx 10rpx 20rpx;
  padding-left: 10rpx;
  border-left: 5rpx solid #268dcd;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #666;
}

.subtitle {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4em;
}

.detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8em;
  margin: 10rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.scrollwrap {
  display: flex;
  flex-direction: row;
  width: 92vw;
  height: 240rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  /* background-color: #e5e5e5;  */
}

.bookwrap {
  display: inline-block;
}

.book {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
  text-align: center;
}

.bookimg {
  width: 150rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

/* .book text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
} */

.comment {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
}

.cdetail {
  -webkit-line-clamp: 3;
}

.name {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8em;
}

.recommend {
  display: flex;
  flex-direction: row;
}

.recommend image {
  margin: 30rpx 30rpx 0 30rpx;
  background-color: #f5f5f5;
}

.rcontent {
  display: flex;
  flex-direction: column;
  padding: 10rpx 35rpx 25rpx 0rpx;
}

.rdetail {
  -webkit-line-clamp: 4;
}

.activity {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0rpx 30rpx 30rpx;
}

.activity image {
  flex: 1;
  width: 330rpx;
  height: 180rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
}
