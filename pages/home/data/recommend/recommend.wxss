/* pages/home/data/recommend/recommend.wxss */

.book-item{
  padding: 25rpx 30rpx;
}

.title{
  width: 100%;
  height: 68rpx;
  font-size: 32rpx;
  line-height: 68rpx;
  color: #268dcd;
  background-color: #f5f5f5;
}

.title text{
  margin-left: 30rpx;
}

.content{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}

.bookimg{
  width: 200rpx;
  height: 270rpx;
  margin: 20rpx 30rpx 20rpx 0;
  background-color: #f5f5f5;
}

.detail{
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 15rpx;
}

.subtitle{
  line-height: 2em;
  font-size: 30rpx;
  color: #666;
  margin: 5rpx 0;
}

.des{
  font-size: 30rpx;
  line-height: 1.6em;
  color: #333;
  text-indent: 1em;
}
