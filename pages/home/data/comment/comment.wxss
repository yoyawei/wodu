.name {
  color: #666;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  line-height: 1.6em;
}

.time {
  color: #999;
  font-size: 26rpx;
  line-height: 1.5em;
  margin-left: 5rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  color: #333;
  word-break: break-all;
  text-indent: 1em;
  background-color: #f5f5f5;  
  padding: 10rpx 25rpx 20rpx 30rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
}

.detail::before {
  content: "";
  width: 0;
  height: 0;
  display: block;
  position: absolute; 
  top: -20px;
  left: 30rpx; 
  border: 10px solid transparent;
  border-bottom-color: #f5f5f5;
}

.title {
  font-size: 32rpx;
  line-height: 2em;
  text-indent: 0;
  letter-spacing: 1.5rpx;
  color: #333;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #e5e5e5;
  margin-bottom: -30rpx;
}
