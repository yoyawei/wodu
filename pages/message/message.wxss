/* pages/message/message.wxss */

.container{
  background-color: #f5f5f5;
}

.wel{
  height: 100vh;
  background-color: #ffffff;
}

.welbtn{
  width: 250rpx;
  height: 88rpx;
  font-size: 32rpx;
  line-height: 80rpx; 
  color: #268dcd;
  background-color: #fff;
  margin-top: 150rpx;
}

.title{
  font-size: 28rpx;
  line-height: 2.2em;
  color: #333;
  border-bottom: 1rpx solid #e5e5e5;
  padding-left: 30rpx;
  background-color: #fff;
}

.noticepart{
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.noticeicon{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.iconimg{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #268dcd;
  margin-bottom: 15rpx;
}

.iconimg image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
}

.icontext{
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.candr{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.critem{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}

.crimg image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.crcontent{
  display: flex;
  flex-direction: column;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
}

.crname{
  font-size: 28rpx;
  color: #333;
  line-height: 1.8em;
}

.crname text{
  font-size: 28rpx;
  color: #999;
  line-height: 1.8em;
}

.crdetail{
  font-size: 30rpx;
  color: #333;
  line-height: 1.5em;
}

.time{
  font-size: 24rpx;
  color: #999;
  padding: 10rpx;
  margin-bottom: 10rpx;
}