/* pages/welcome/welcome.wxss */

.container{
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0 50rpx 0;
  box-sizing: border-box;
  background-color: #268dcd;  
}  

.motto{
  margin-bottom: 50rpx;
  font-size: 34rpx;
  line-height: 2em;
  color: #ffffff;
  text-align: center;
}

.big{
  font-size: 46rpx;
  margin-bottom: 20rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.userinfo button{
  height: 88rpx;
  font-size: 40rpx;
  line-height: 80rpx; 
  color: #268dcd;
  background-color: #fff;
}

.tohome{
  font-size: 32rpx;
  color: #ffffff;
  margin-top: 120rpx;
}

.login{
  position: fixed;
  bottom: 240rpx;
  display: flex;
  flex-direction: row;
}

.login button{
  width: 240rpx;
  height: 88rpx;
  font-size: 40rpx;
  line-height: 80rpx; 
  font-weight: bold; 
  color: #fff;
  background-color: #268dcd;
  margin-right: 30rpx; 
  margin-left: 30rpx;
} 
