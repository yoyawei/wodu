/* pages/user/follow/follow.wxss */

.follows {
  display: flex;
  flex-direction: column;
}

.follow {
  display: flex;
  flex-direction: row;
}

.favatar {
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.favatar image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.finfo {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.fname {
  font-size: 32rpx;
  color: #333;
}

.actbtn {
  width: 180rpx;
  height: 60rpx;
  margin-right: 40rpx;
  font-size: 30rpx;
  line-height: 52rpx;
  color: #268dcd;
  background-color: #fff;
  border: 2rpx solid #268dcd;
  border-radius: 40rpx;
}
